{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "types": [
      "react",
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "/public/",
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017"
    ],
  },
  "exclude": [
    "public",
    "dist",
    "build",
    "node_modules",
    "vendor"
  ]
}