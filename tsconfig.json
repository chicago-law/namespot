{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "/public/",
    "lib": [
      "es6",
      "es7",
      "dom"
    ]
  },
  "exclude": [
    "public",
    "dist",
    "build",
    "node_modules",
    "vendor"
  ]
}